{%- block company_logo %}
    {% set company_model = company_model|default(company.get) %}
    {% if company_model|default and company_model.logo|default %}
        <{{ tag_name|default('div') }}{{ attrs(company_logo_attributes|default).addClass('company_logo') }}>
            {{- logo_prefix|default -}}
            {{ include('@Contao/component/_figure.html.twig', {
                figure: figure(company_model.logo, null),
                linkHref: app.request.baseUrl,
                img_attributes: {
                    class: 'logo ' ~ logo_class|default,
                    alt: company_model.name,
                },
            }) }}
            {{- logo_suffix|default -}}
        </{{ tag_name|default('div') }}>
    {% endif %}
{% endblock -%}

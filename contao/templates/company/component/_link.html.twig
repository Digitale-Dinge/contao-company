{% block link_component %}
    {% set tag_name = href|default ? 'a' : 'span' %}
    {% set link_attributes = attrs(link_attributes|default)
        .addClass(class|default)
        .set('href', href_prefix|default ~ href|default|encode_email, href|default)
        .setIfExists('title', title|default)
    %}
    <{{ tag_name }}{{ link_attributes }}>{{ link|encode_email }}</{{ tag_name }}>
{% endblock %}
